<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_to_refresh_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:paddingBottom="10dip"
    android:paddingTop="10dip" >

    

    
    <ImageView
        android:id="@+id/pull_to_load_image1"
        android:layout_width="16dp"
            android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="20dip"
        android:gravity="center"
        
        android:src="@drawable/ic_pulltorefresh_arrow_up"
        android:visibility="visible" />

     <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pull_to_load_text1"
                android:textSize="14sp"
                android:text="上拉加载更多"
                android:gravity="center"
                android:layout_toRightOf="@+id/pull_to_load_image1"
                />
     <ProgressBar
        android:id="@+id/pull_to_load_progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:visibility="gone" 
        android:layout_toRightOf="@+id/pull_to_load_text1"/>


</RelativeLayout>