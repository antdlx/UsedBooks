<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="提示"
        android:textSize="25dp"
        android:textColor="#636363"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/tv_sure_dialog_title"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="若把此旧书的状态设置为已销售，则他人将不能再查询到该书，且此操作不可逆。"
        android:textSize="15dp"
        android:textColor="#636363"
        android:id="@+id/tv_sure_dialog_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cfcfcf"
        ></LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <Button 
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/bt_sure_dialog_ok"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:text="确定"
            android:textColor="#fd6c02"
            android:textSize="17dp"
            />
        <TextView 
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#cfcfcf"
            />
        <Button 
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/bt_sure_dialog_cancle"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:text="取消"
            android:textColor="#88abda"
            android:textSize="17dp"
            />
    </LinearLayout>
    

</LinearLayout>
