<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:scaleType="fitCenter" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/tv_item_mybook_fenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/book_price"
            android:layout_toLeftOf="@+id/book_time"
            android:text=" | "
            android:textColor="#9a9a97"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/book_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_item_mybook_fenge"
            android:layout_alignBottom="@+id/tv_item_mybook_fenge"
            android:layout_toLeftOf="@+id/tv_item_mybook_fenge"
            android:text="软件园校区"
            android:textColor="#9a9998"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/book_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_item_mybook_fenge"
            android:layout_alignBottom="@+id/tv_item_mybook_fenge"
            android:layout_alignParentRight="true"
            android:text="2014-10-31 20:27:00"
            android:textColor="#9a9998"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:text="￥1"
            android:textColor="#fd6c02"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/book_description"
       android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:background="#f8f8f8"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text=""
        android:textColor="#323232"
        android:textSize="13dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >
       
        <ImageButton
            android:id="@+id/button_contect"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/main_contect"
            android:textColor="#ffffff" />
         <RelativeLayout 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        >
         <ImageView
            android:id="@+id/button_tel"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
            android:background="@drawable/main_call" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/button_tel"
            android:layout_alignBaseline="@+id/button_tel"
            android:text="联系TA"
            android:textSize="15dp"
            android:textColor="#ffffff" />
            
        </RelativeLayout>
        

       

    </FrameLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
         >
          <ImageView
        android:id="@+id/iv_item_mybook_classify"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/iv_item_mybook_classify" 
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/book_type"/>

    <TextView
        android:id="@+id/book_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:gravity="right"
        android:text="计算机/软件"
        android:textColor="#9a9a97"
        android:textSize="8dp" />
        
    </RelativeLayout>

</LinearLayout>