<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ing.usedbooks"
    android:versionCode="1"
    android:versionName="1.2" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
         <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
         <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
         <uses-permission android:name="android.permission.CAMERA"/>
         <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
         <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.ing.usedbooks.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.usedbooksHorizontalScrollView"></activity>
        <activity android:name="com.ing.usedbooks.activities.PushActivity"></activity>
        <activity android:name="com.ing.usedbooks.activities.ClassifyActivity"></activity>
        <activity android:name=".activities.MyOldBookActivity"></activity>
        <activity android:name=".activities.SuggestionActivity"></activity>
        <activity android:name=".activities.SearchActivity"></activity>
        <activity android:name=".activities.ViewPagerActivity"></activity>
        <activity android:name=".activities.SubActivity"></activity>
        <activity android:name=".activities.installApp"></activity>
        <activity android:name=".activities.AboutActivity"></activity>
        <activity android:name=".activities.CountDownActivity"></activity>
    </application>

</manifest>
